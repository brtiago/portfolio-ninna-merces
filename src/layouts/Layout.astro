---
import siteConfig from '../data/site-config.json';

export interface Props {
  title: string;
  description?: string;
  canonical?: string;
  image?: string;
}

const { 
    title, 
    description = siteConfig.description, 
    canonical,
    image 
} = Astro.props;

const canonicalURL = canonical;
---

<!DOCTYPE html>
<html lang="pt-BR" class="overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={siteConfig.seo.keywords} />
    <meta name="author" content={siteConfig.seo.author} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image || '/images/og-image.jpg'} />
    <meta property="og:locale" content="pt_BR" />
    <meta property="og:site_name" content={siteConfig.name} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image || '/images/og-image.jpg'} />

    <!-- Preload Critical Resources -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Inter:wght@400;500&family=Playfair+Display:wght@400;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Inter:wght@400;500&family=Playfair+Display:wght@400;700&display=swap"></noscript>
  </head>
  
  <body>
    <div>
      <main class="min-h-screen overflow-x-hidden min-w-0 w-full">
        <slot />
      </main>
    </div>

    <!-- Analytics Script (Google Analytics 4) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=GA_MEASUREMENT_ID"></script>
    
    <!-- WhatsApp Floating Button -->
    <div class="fixed bottom-4 right-4 sm:bottom-6 sm:right-6 z-50 pointer-events-none">
      <a 
        href={`https://wa.me/${siteConfig.whatsapp.number}?text=${encodeURIComponent(siteConfig.whatsapp.message)}`}
        target="_blank"
        rel="noopener noreferrer"
        class="block w-12 h-12 sm:w-14 sm:h-14 md:w-16 md:h-16 bg-green-500 hover:bg-green-600 text-white rounded-full flex items-center justify-center shadow-lg hover:shadow-xl transition-all duration-300 animate-float pointer-events-auto"
        aria-label="WhatsApp - Agendar consulta"
      >
        <svg class="w-6 h-6 sm:w-7 sm:h-7 md:w-8 md:h-8" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
        </svg>
      </a>
    </div>

  </body>
  
</html>

<style is:global>
  /* Reset e configurações base */
  *, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  
  html {
    scroll-behavior: smooth;
    overflow-x: hidden !important;
    width: 100% !important;
    max-width: 100% !important;
  }
  
  body {
    font-family: 'Inter', sans-serif;
    line-height: 1.6;
    color: #2D3748;
    background-color: #ffffff;
    overflow-x: hidden !important;
    width: 100% !important;
    max-width: 100% !important;
    position: relative;
    min-width: 0;
  }
  
  /* Força todos os elementos a respeitarem a largura da tela */
  * {
    max-width: 100% !important;
    box-sizing: border-box !important;
  }
  
  /* Específico para imagens e mídia */
  img, video, iframe, object, embed {
    max-width: 100% !important;
    height: auto !important;
    box-sizing: border-box !important;
  }
  
  /* Previne elementos de texto muito largos */
  pre, code {
    max-width: 100% !important;
    overflow-x: auto;
    white-space: pre-wrap;
    word-wrap: break-word;
  }
  
  /* Containers e divs */
  div, section, article, header, footer, nav, main {
    max-width: 100% !important;
    box-sizing: border-box !important;
  }
  
  /* Especial atenção para elementos posicionados */
  .fixed, .absolute, .relative {
    max-width: 100% !important;
  }
  
  a {
    color: inherit;
    text-decoration: none;
  }
  
  button {
    font-family: inherit;
  }
  
  /* Acessibilidade - Focus */
  *:focus {
    outline: 2px solid #A57ACE;
    outline-offset: 2px;
  }
  
  /* Remove outline para mouse users */
  .js-focus-visible *:focus:not(.focus-visible) {
    outline: none;
  }

  /* Animation para o botão WhatsApp */
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  /* Media queries específicas para mobile */
  @media screen and (max-width: 768px) {
    html {
      overflow-x: hidden !important;
      width: 100vw !important;
      max-width: 100vw !important;
    }
    
    body {
      overflow-x: hidden !important;
      width: 100vw !important;
      max-width: 100vw !important;
      font-size: 14px;
    }
    
    /* Força todos os elementos a não excederem a viewport */
    * {
      max-width: 100vw !important;
    }
    
    /* Específico para Tailwind containers */
    .container {
      max-width: 100vw !important;
      padding-left: 1rem !important;
      padding-right: 1rem !important;
    }
  }


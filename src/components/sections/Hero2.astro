---
import siteConfig from '../../data/site-config.json';
---

<section class="hero-section">
  <div class="container">
    <div class="hero-content">
      <!-- Foto da Psicóloga -->
      <div class="hero-image">
        <div class="image-container">
          <img 
            src="/images/abc.jpg" 
            alt={`Foto da ${siteConfig.name}, ${siteConfig.title}`}
            class="profile-image"
            loading="eager"
          />
        </div>
      </div>
      
      <!-- Texto Principal -->
      <div class="hero-text">
        <div class="hero-badge">
          <span class="badge-text">{siteConfig.title}</span>
        </div>
        
        <h1 class="hero-headline">
          {siteConfig.name}
        </h1>
        
        <h2 class="hero-title">
          {siteConfig.title}
        </h2>
        
        <p class="hero-description">
          {siteConfig.hero.subheadline}
        </p>
        
        <!-- CTAs -->
        <div class="hero-ctas">
          <a 
            href={siteConfig.calendly} 
            target="_blank" 
            rel="noopener noreferrer"
            class="btn-primary"
            id="cta-agendar"
          >
            {siteConfig.hero.cta_primary}
          </a>
          
          <a 
            href={`https://wa.me/${siteConfig.whatsapp}?text=Olá! Gostaria de saber mais sobre a terapia.`}

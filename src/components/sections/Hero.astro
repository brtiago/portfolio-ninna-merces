---
import siteConfig from '../../data/site-config.json';
---
<!-- hero-section -->
<section class="min-h-screen bg-gradient-to-br from-(--secondary) to-white flex items-center pt-32 pb-4 relative overflow-hidden pt" id="home">
  <!-- Container -->
  <div class="mx-auto px-8 max-w-6xl">
    <!-- Hero Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-7 md:gap-16 items-center relative z-20 text-center md:text-left">
      
      <!-- Texto Principal -->
      <div class="animate-[slideUp_0.8s_ease-out]">
        <h1 class="var(--warning)">{siteConfig.name}</h1>
        <!-- Hero Headline -->
        <h2 class="font-['Poppins'] text-[clamp(2.5rem,5vw,3.5rem)] font-bold 
        leading-[1.2] text-(--neutral-800) mb-6 bg-gradient-to-br from-(--neutral-800) 
        to-(--primary-dark) bg-clip-text text-transparent">
          {siteConfig.hero.headline}
        </h2>
        <!-- Hero Subheadline -->
        <p class="font-['Inter'] text-xl font-normal leading-tight text-slate-500 mb-10">
          {siteConfig.hero.subheadline}
        </p>
        
        <!-- CTAs -->
        <div class="flex gap-4 mb-8 flex-wrap">
          <a 
            href={siteConfig.doctoralia} 
            target="_blank" 
            rel="noopener noreferrer"
            class="btn-primary"
            id="cta-agendar"
          >
            {siteConfig.hero.cta_primary}
          </a>
          
          <a 
            href={`https://wa.me/${siteConfig.whatsapp.number}?text=${encodeURIComponent(siteConfig.whatsapp.message)}`}
            target="_blank" 
            rel="noopener noreferrer"
            class="btn-secondary"
            id="cta-whatsapp"
          >
            {siteConfig.hero.cta_secondary}
          </a>
        </div>
        
        <!-- Redes Sociais -->
        <div class="social-links">
          <a 
            href={`https://instagram.com/${siteConfig.social.instagram.replace('@', '')}`}
            target="_blank" 
            rel="noopener noreferrer"
            class="social-link"
            aria-label="Instagram"
          >
